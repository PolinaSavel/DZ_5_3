/*Вычислить и записать в массив первые 10 простых чисел.
Простое число – положительное целое число, которое делится без остатка лишь на себя и на 1.
1 не является простым числом.
Вывести в консоль сумму всех элементов полученного массива.*/

import java.util.Scanner;
public class Lesson_5_3 {
    public static void main(String[] args) {

        Scanner in = new Scanner(System.in);

        int[] array = new int[10];

        for (int i = 0; i < 10; i++) {
            if (i == 0) {
                array[i] = 2;
            } else {
                System.out.println("Введите число: ");
                int num = in.nextInt();
                int addingValue = i == 1 ? 1 : 2;
                int number = array[i - 1] + addingValue;
                while (array[i] == 0) {
                    int j = 0;
                    boolean isPrime = true;
                    while (isPrime && j < i && number / array[j] > 1) {
                        if (number % array[j] == 0) {
                            isPrime = false;
                        } else {
                            j++;
                        }
                    }
                    if (isPrime) {
                        array[j] = number;
                    } else {
                        number += 2;
                    }
                }
            }
        }
        for (int m : array) {
            System.out.print("[" + m + "]");
        }
        int sum = 0;
        for (int k = 0; k < array.length; k++) {
            sum += array[k];
        }
        System.out.println("Сумма чисел: " + sum);
    }
}

